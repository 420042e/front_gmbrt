<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/tvPaymentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pago de Servicios"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="@color/black" />

    <!-- Selección de Servicio -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione el Servicio"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <Spinner
        android:id="@+id/spinnerService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:entries="@array/services_array" />

    <!-- Número de Referencia -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de Referencia"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/etReferenceNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese número de referencia"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <!-- Monto a Pagar -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monto a Pagar"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el monto"
        android:inputType="numberDecimal"
        android:layout_marginBottom="24dp" />

    <!-- Botón de Pago -->
    <Button
        android:id="@+id/btnPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pagar"
        android:backgroundTint="@color/black"
        android:textColor="@color/white" />

</LinearLayout>
